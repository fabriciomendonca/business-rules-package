{
  "compilerOptions": {
    "allowSyntheticDefaultImports": true,
    "lib": ["es6", "es7"],
    "sourceMap": true,
    "experimentalDecorators": true,
    "declaration": true,
    "outDir": "./dist",
    "target": "es5",
    "moduleResolution": "node",
    "strict": true,
    "strictPropertyInitialization": false
  },
  "exclude": ["node_modules", "dist", "**/__mocks__/*.ts", "**/*.spec.ts"]
}
